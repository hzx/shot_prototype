include_rules

LIBS = \
-lboost_program_options\
-lboost_system\
-lboost_filesystem\
-lboost_thread\
-lpthread\
-lcrypto\
-lmongoclient\
-lMagick++ -lMagickCore

#`Magick++-config --libs`

: foreach *.cpp |> !cclib |> %B.o {objs}
: {objs} |> $(CC) -shared -Wl,-soname,%o $(LFLAGS) -o %o $(LIBS) %f |> lib%d.so
