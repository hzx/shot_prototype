CC = clang++
OPT += -Wall -O2 -std=c++11

!cc = |> ^ cc %f^ $(CC) $(OPT) $(CFLAGS) -c %f -o %o |>
!cclib = |> ^ cclib %f^ $(CC) $(OPT) $(CFLAGS) -fPIC -c %f -o %o |>
!ar = |> ^ ar %o^ ar crs %o %f |>
!lib = |> ^ lib %o^ $(CC) $(OPT) $(LFLAGS) -shared -o %o %f |>
!ld = |> ^ ld %o^ $(CC) $(OPT) $(LFLAGS) -o %o %f |>

CFLAGS += -I$(TUP_CWD)/shot\
-I/usr/include\
-I/usr/include/ImageMagick

#`Magick++-config --cppflags`

LFLAGS += -L$(TUP_CWD)/shot\
-L/usr/local/lib
